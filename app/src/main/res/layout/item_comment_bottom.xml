<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:src="#123132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:id="@+id/nick_name_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="닉네임"
        app:layout_constraintStart_toEndOf="@+id/profile_img_comment"
        app:layout_constraintTop_toTopOf="@+id/profile_img_comment"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/reply_content_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:textColor="#323232"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nick_name_comment"
        app:layout_constraintTop_toBottomOf="@+id/nick_name_comment" />

    <TextView
        android:id="@+id/date_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2020.11.22"
        android:textColor="#929292"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/reply_content_comment"
        app:layout_constraintTop_toBottomOf="@+id/reply_content_comment"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/reply_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="댓글"
        android:clickable="true"
        android:textColor="#929292"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/date_comment"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/reply_content_comment"
        tools:ignore="HardcodedText" />

    <TextView
        android:visibility="gone"
        android:id="@+id/comment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답글달기"
        android:textColor="#929292"
        android:textSize="11.7sp"
        app:layout_constraintBottom_toBottomOf="@+id/date_comment"
        app:layout_constraintEnd_toEndOf="@+id/reply_content_comment"
        app:layout_constraintTop_toTopOf="@+id/date_comment"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>