<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_question"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/circle_question_popup_banners_new"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/item_popup_new_banner"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="@id/question_popup"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/question_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q"
                android:layout_marginStart="8dp"
                android:elevation="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/circle_question_popup_banners_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/circle_question_popup_banners_new"
                app:layout_constraintBottom_toBottomOf="@id/circle_question_popup_banners_new"/>

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="먼저, 뷰켓을 만나기 전 피부 관리에 대해서 어떤\n생각을 하셨나요?"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/circle_question_popup_banners_new"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_answer"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_question"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/circle_question_popup_banners_new_answer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/item_popup_answer_banner"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="@id/question_popup_answer"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/question_popup_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:layout_marginStart="8dp"
                android:elevation="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/circle_question_popup_banners_new_answer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/circle_question_popup_banners_new_answer"
                app:layout_constraintBottom_toBottomOf="@id/circle_question_popup_banners_new_answer"/>

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="피부에 특별히 신경을 쓰진 않았어요. 그냥 지저분한 게 보이기 싫어서 쿠션으로 열심히 가리고 다녔어요."
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/circle_question_popup_banners_new_answer"
                app:layout_constraintTop_toTopOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/view292"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DBDBDB"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/card_answer"
        app:layout_constraintStart_toStartOf="@id/card_question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_answer" />

    </androidx.constraintlayout.widget.ConstraintLayout>