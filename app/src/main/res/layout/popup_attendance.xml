    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/close"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/imageView_PopUpCup"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/cup"
        app:layout_constraintBottom_toTopOf="@id/imageView_PopUp"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        app:layout_constraintTop_toBottomOf="@id/imageClose"
        />


    <ImageView
        android:id="@+id/imageView_PopUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/pop_atten_fix"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        app:layout_constraintTop_toBottomOf="@id/imageView_PopUpCup"
        app:layout_constraintBottom_toTopOf="@id/confirm_text"
        />




    <TextView
        android:id="@+id/confirm_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_popup_attendance"
        android:fontFamily="@font/dream5"
        android:gravity="center"
        android:backgroundTint="@color/main_theme2"
        android:text="확인"
        android:textColor="#ffffff"
        android:textSize="16sp"
        tools:ignore="HardcodedText"
        app:layout_constraintBottom_toBottomOf="@id/img_popup"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>
</androidx.constraintlayout.widget.ConstraintLayout>
