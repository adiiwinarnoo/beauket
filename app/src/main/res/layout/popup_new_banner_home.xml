<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/conts_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90050101"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/conts_1"
        app:layout_constraintBottom_toBottomOf="@id/conts_1"
        app:layout_constraintStart_toStartOf="@id/conts_1"
        app:layout_constraintEnd_toEndOf="@id/conts_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/scroll"
            app:layout_constraintBottom_toBottomOf="@id/conts_1"
            app:layout_constraintStart_toStartOf="@id/scroll"
            app:layout_constraintStart_toEndOf="@id/scroll">

            <ImageView
                android:id="@+id/img_popup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:id="@+id/imageClose"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/close"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/img_popup"
                app:layout_constraintEnd_toEndOf="@id/img_popup"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tview_tittle_popup_new_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/imageClose"
                app:layout_constraintStart_toStartOf="@id/img_popup"
                app:layout_constraintEnd_toEndOf="@id/img_popup"
                android:text="30대 직장인 모니카님의 사연"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tview_left_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="4"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tview_tittle_popup_new_home"
                app:layout_constraintStart_toStartOf="@id/img_popup"
                app:layout_constraintEnd_toEndOf="@id/img_popup"
                android:text="찍을수록 똑똑해진다!\n안녕하세요. 뷰켓 에디터입니다!\n오늘은 피부에 관심이 없던 30대 직장인 모니카님과 뷰켓의\n만남을 소개 해드릴게요!"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/confirm_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_popup_attendance"
                android:fontFamily="@font/dream5"
                android:gravity="center"
                android:backgroundTint="@color/main_theme2"
                android:text="확인"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:ignore="HardcodedText"
                app:layout_constraintBottom_toBottomOf="@id/img_popup"
                app:layout_constraintStart_toStartOf="@id/img_popup"
                app:layout_constraintEnd_toEndOf="@id/img_popup"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_new_popup_banner_shopping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"
                android:background="@color/popup_attendance"
                app:layout_constraintBottom_toTopOf="@id/tview_bottom_after_recycler"
                app:layout_constraintStart_toStartOf="@id/img_popup"
                app:layout_constraintEnd_toEndOf="@id/img_popup"
                app:layout_constraintTop_toBottomOf="@id/tview_left_new"
                tools:listitem="@layout/list_pop_new_banner"/>

            <TextView
                android:id="@+id/tview_bottom_after_recycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="4"
                app:layout_constraintStart_toStartOf="@id/img_popup"
                app:layout_constraintEnd_toEndOf="@id/img_popup"
                app:layout_constraintTop_toBottomOf="@id/recycler_new_popup_banner_shopping"
                app:layout_constraintBottom_toTopOf="@id/confirm_text"
                android:textSize="12sp"
                android:layout_margin="20dp"
                android:text="네! 이렇게 피부에 관심이 없던 사람도 뷰켓을 만나 달라진\n피부에 만족을 하셔서 저희도 정말 기쁩니다!!\n앞으로도 뷰켓과 함께 한 고객님들과의 더 많은 인터뷰를\n들고 찾아오겠습니다. 감사합니다."/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>








</androidx.constraintlayout.widget.ConstraintLayout>
